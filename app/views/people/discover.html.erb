<h1>Viewing Party Lite</h1>
<h2>Discover Movies</h2>

<div class="center-button">
  <%= button_to "Find Top Rated Movies", movies_path(:id), method: :post %>
</div>

<p>OR</p>

<div class="center-field">
  <%= form_with url: "/people/:person_id/movies?q=keyword", method: :post do |form| %>
    <%= form.label :query, "Search by movie title" %>
    <%= form.text_field :query  %>
    <%= form.submit "Find Movies" %>
  <% end %>
</div>
